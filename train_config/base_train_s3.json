
{
    "name": "base_train_s3",
    "description": "Base training configuration. Used for testing and debugging pipeline. Validates S3 storage.",
    "repository": {
        "experiment_id": "experiment_001",
        "data": {
            "type": "sqlite",
            "properties": { 
                "name": "example.db",
                "migrate": true
            }
        },
        "object": {
            "type": "s3",
            "properties": { "bucket_name": "humamf-artifacts" }
        }
    },
    "instructions": [
        {
            "type": "data_io",
            "properties": {
                "path": "dataset",
                "file": "cfs_2017",
                "format": "csv",
                "reference": "commodity_flow"
            },
            "call": [
                {
                    "type": "load",
                    "n_rows":1000
                }
            ]
        },
        {
            "type": "data_cleaner",
            "properties": { "type": "lazy_call",  "reference": "commodity_flow"},
                
            "call": [
                {"type": "filter_columns", "columns": ["shipment_weight", "shipment_value"]},
                {"type": "drop_na"}
            ]
        },
        {
            "type": "data_transformer",
            "properties": { "type": "lazy_call", "reference": "commodity_flow" },
            "call": []
        },
        {
            "type": "model_trainer",
            "properties": {
                "objective": "best_model",
                "random_state": 42,
                "fold": 5,
                "parameter_grid": {
                    "type": "exhaustive"
                },
                "primary_metric": "rmse",
                "metrics": ["rmse"]
            },
            "call": [
                {
                    "model_type": "random_forest_regressor",
                    "hyperparameters": {
                        "n_estimators": [50, 100],
                        "max_depth": [5, 10],
                        "random_state": [42]
                    }
                },
                {
                    "model_type": "linear_regression",
                    "hyperparameters": {}
                },
                {
                    "model_type": "gradient_boosting_regressor",
                    "hyperparameters": {
                        "n_estimators": [50, 100],
                        "learning_rate": [0.01, 0.1],
                        "max_depth": [3, 5],
                        "random_state": [42]
                    }
                }
            ]
        }
    ]
}